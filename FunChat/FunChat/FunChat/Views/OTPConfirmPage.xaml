<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FunChat.Views.OTPConfirmPage">
    <StackLayout BackgroundColor="#7eeed9">
        <Image Source="main_logo.png" HorizontalOptions="Center"/>
        <Label Text="Enter OTP" HorizontalOptions="Start"/>
        <Entry Text="{Binding OTP}" 
               Keyboard="Numeric" ReturnType="Go" 
               IsPassword="True" 
               Completed="OTP_Entered"
               HorizontalOptions="FillAndExpand"/>
    </StackLayout>
</ContentPage>