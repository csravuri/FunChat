<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FunChat.Views.RegistrationPage">
    <StackLayout BackgroundColor="#7eeed9">
        <Image Source="main_logo.png" HorizontalOptions="Center"/>
        <Entry Text="{Binding PhoneNo}" Keyboard="Telephone" ReturnType="Go" 
               Placeholder="Phone No with country code" 
               HorizontalOptions="FillAndExpand"
               Completed="PhoneNo_Entered"/>
    </StackLayout>
</ContentPage>